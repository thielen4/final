<div class="row">
    <div class="col-sm-9">
        <h2>
            <i class="far fa-calendar-alt"></i>
            <%= @gym[:location] %>
        </h2>
        <h1><%= @gym[:gym] %></h1>
        <p><%= @gym[:description] %></p>
        <% for review in @reviews %>
            <div class="media">
                <% if review[:thumbs] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/gyms/<%= @gym[:id] %>/reviews/new" class="btn btn-primary">Add your review</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Location</h3>
        <p><%= @gym[:location] %></p>
        <h3>Contact</h3>
        <p><%= @gym[:phone] %></p>
        <h3>How many reviews so far?</h3>
        <p><%= @reviews_count %></p>
    </div>
</div>