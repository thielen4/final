<div class="row">
    <div class="col-sm-9">
        <h1><%= @gym[:gym] %></h1>
        <p><img src="<%= @gym[:image] %>" width="500"></p>
        <p><%= @gym[:description] %></p>
        <% for review in @reviews %>
            <div class="media">
                <% if review[:thumbs] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= @users_table.where(id: review[:user_id]).to_a[0][:name] %></h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <% if @current_user %>
                <a href="/gyms/<%= @gym[:id] %>/reviews/new" class="btn btn-primary">Add your review</a>
            <% else %>
                <a href="/logins/new" class="btn btn-danger">Please sign in to review</a>
            <% end %>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>Contact</h3>
            <p><%= @gym[:phone] %></p>
        <h3>Location</h3>
            <p><i class="fas fa-map-pin"></i><%= @gym[:location] %></p>
        <iframe
            width="300"
            height="250"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=12" allowfullscreen>
        </iframe>
    </div>
</div>